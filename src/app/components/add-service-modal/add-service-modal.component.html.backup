<!-- Modal Overlay -->
<div class="modal-overlay" (click)="closeModal()">
  <div class="modal-container" (click)="$event.stopPropagation()">
    
    <!-- Close Button -->
    <button class="close-btn" type="button" (click)="closeModal()" [disabled]="isSubmitting">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <!-- Header -->
    <div class="modal-header">
      <div class="header-icon">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
      </div>
      <h2>Add Workshop Services</h2>
      <p>Configure your service offerings with pricing and specialization details</p>
    </div>

    <!-- Progress Stepper -->
    <div class="progress-stepper">
      <div class="step" [class.active]="currentStep === 1" [class.completed]="currentStep > 1" (click)="goToStep(1)">
        <div class="step-circle">
          <svg *ngIf="currentStep > 1" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
            <polyline points="20 6 9 17 4 12"/>
          </svg>
          <span *ngIf="currentStep <= 1">1</span>
        </div>
        <span class="step-label">Category</span>
      </div>
      
      <div class="step-line" [class.completed]="currentStep > 1"></div>
      
      <div class="step" [class.active]="currentStep === 2" [class.completed]="currentStep > 2" (click)="goToStep(2)">
        <div class="step-circle">
          <svg *ngIf="currentStep > 2" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
            <polyline points="20 6 9 17 4 12"/>
          </svg>
          <span *ngIf="currentStep <= 2">2</span>
        </div>
        <span class="step-label">Subcategory</span>
      </div>
      
      <div class="step-line" [class.completed]="currentStep > 2"></div>
      
      <div class="step" [class.active]="currentStep === 3" [class.completed]="currentStep > 3" (click)="goToStep(3)">
        <div class="step-circle">
          <svg *ngIf="currentStep > 3" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
            <polyline points="20 6 9 17 4 12"/>
          </svg>
          <span *ngIf="currentStep <= 3">3</span>
        </div>
        <span class="step-label">Services</span>
      </div>
      
      <div class="step-line" [class.completed]="currentStep > 3"></div>
      
      <div class="step" [class.active]="currentStep === 4" [class.completed]="currentStep > 4" (click)="goToStep(4)">
        <div class="step-circle">
          <svg *ngIf="currentStep > 4" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
            <polyline points="20 6 9 17 4 12"/>
          </svg>
          <span *ngIf="currentStep <= 4">4</span>
        </div>
        <span class="step-label">Configure</span>
      </div>
      
      <div class="step-line" [class.completed]="currentStep > 4"></div>
      
      <div class="step" [class.active]="currentStep === 5" [class.completed]="currentStep > 5">
        <div class="step-circle">
          <span>5</span>
        </div>
        <span class="step-label">Review</span>
      </div>
    </div>

    <!-- Draft Banner -->
    <div *ngIf="showDraftBanner" class="draft-banner-simple">
      <p>Continue where you left off?</p>
      <div class="draft-actions-simple">
        <button type="button" class="btn-link" (click)="restoreDraft()">Yes, restore</button>
        <button type="button" class="btn-link-muted" (click)="dismissDraft()">No, start fresh</button>
      </div>
    </div>

    <!-- Error Message Only -->
    <div *ngIf="showMessage && !isSuccess" class="error-banner-simple">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <path d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p>{{ resultMessage }}</p>
      <button type="button" class="btn-dismiss" (click)="dismissMessage()">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body">
      
      <!-- ============================================ -->
      <!-- STEP 1: Category Selection -->
      <!-- ============================================ -->
      <div *ngIf="currentStep === 1" class="step-content" [@fadeIn]>
        <div class="breadcrumb">
          <span class="breadcrumb-item active">Category</span>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
          <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
          <input 
            type="text" 
            placeholder="Search categories..." 
            [(ngModel)]="categorySearchTerm"
            (input)="filterCategories()"
          />
        </div>

        <!-- Category Grid -->
        <div class="category-grid">
          <div 
            *ngFor="let category of filteredCategories"
            class="category-card"
            (click)="selectCategory(category)"
          >
            <div class="category-icon">
              <span>{{ category.icon }}</span>
            </div>
            <h3>{{ category.name }}</h3>
            <p class="category-count">{{ category.subcategories.length }} subcategories</p>
            <div class="category-arrow">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </div>
          </div>
        </div>

        <div *ngIf="filteredCategories.length === 0" class="empty-state">
          <p>No categories found matching "{{ categorySearchTerm }}"</p>
        </div>
      </div>

      <!-- ============================================ -->
      <!-- STEP 2: Subcategory Selection -->
      <!-- ============================================ -->
      <div *ngIf="currentStep === 2" class="step-content" [@fadeIn]>
        <div class="breadcrumb">
          <span class="breadcrumb-item" (click)="previousStep()">{{ selectedCategory?.name }}</span>
          <span class="breadcrumb-separator">›</span>
          <span class="breadcrumb-item active">Subcategory</span>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
          <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
          <input 
            type="text" 
            placeholder="Search subcategories..." 
            [(ngModel)]="subcategorySearchTerm"
          />
        </div>

        <!-- Subcategory Grid -->
        <div class="subcategory-grid">
          <div 
            *ngFor="let subcategory of getFilteredSubcategories()"
            class="subcategory-card"
            (click)="selectSubcategory(subcategory)"
          >
            <h3>{{ subcategory.name }}</h3>
            <div class="subcategory-badge">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <span>{{ getServiceCount(subcategory) }} services</span>
            </div>
            <div class="subcategory-arrow">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </div>
          </div>
        </div>

        <div *ngIf="getFilteredSubcategories().length === 0" class="empty-state">
          <p>No subcategories found</p>
        </div>

        <!-- Back Button -->
        <button type="button" class="btn-back" (click)="previousStep()">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
          <span>Back to Categories</span>
        </button>
      </div>

      <!-- ============================================ -->
      <!-- STEP 3: Service Multi-Select -->
      <!-- ============================================ -->
      <div *ngIf="currentStep === 3" class="step-content" [@fadeIn]>
        <div class="breadcrumb">
          <span class="breadcrumb-item" (click)="goToStep(1)">{{ selectedCategory?.name }}</span>
          <span class="breadcrumb-separator">›</span>
          <span class="breadcrumb-item" (click)="previousStep()">{{ selectedSubcategory?.name }}</span>
          <span class="breadcrumb-separator">›</span>
          <span class="breadcrumb-item active">Select Services</span>
        </div>

        <!-- Search & Actions Bar -->
        <div class="services-toolbar">
          <div class="search-bar">
            <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
            <input 
              type="text" 
              placeholder="Search services..." 
              [(ngModel)]="serviceSearchTerm"
            />
          </div>

          <div class="quick-actions">
            <button type="button" class="btn-quick-action" (click)="selectAllServices()">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11l3 3L22 4"/>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
              </svg>
              Select All
            </button>
            <button type="button" class="btn-quick-action" (click)="clearAllServices()">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Clear All
            </button>
          </div>
        </div>

        <!-- Selected Counter -->
        <div class="selection-counter" *ngIf="getSelectedCount() > 0">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>{{ getSelectedCount() }} service(s) selected</span>
        </div>

        <!-- Service List -->
        <div class="service-list">
          <div 
            *ngFor="let service of getFilteredServices()"
            class="service-item"
            [class.selected]="isServiceSelected(service.id)"
            (click)="toggleServiceSelection(service)"
          >
            <div class="service-checkbox">
              <div class="checkbox-inner">
                <svg *ngIf="isServiceSelected(service.id)" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
              </div>
            </div>
            <span class="service-name">{{ service.name }}</span>
          </div>
        </div>

        <div *ngIf="getFilteredServices().length === 0" class="empty-state">
          <p>No services found</p>
        </div>

        <!-- Navigation Buttons -->
        <div class="step-navigation">
          <button type="button" class="btn-back" (click)="previousStep()">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
            <span>Back</span>
          </button>
          <button 
            type="button" 
            class="btn-next" 
            (click)="nextStep()"
            [disabled]="!canProceedToNextStep()"
          >
            <span>Configure Services</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- ============================================ -->
      <!-- STEP 4: Service Configuration -->
      <!-- ============================================ -->
      <div *ngIf="currentStep === 4" class="step-content" [@fadeIn]>
        <div class="breadcrumb">
          <span class="breadcrumb-item active">Configure {{ selectedServices.length }} Service(s)</span>
        </div>

        <form [formGroup]="configurationForm">
          <!-- Service Tabs -->
          <div class="config-tabs">
            <button
              *ngFor="let service of selectedServices; let i = index"
              type="button"
              class="config-tab"
              [class.active]="activeConfigTab === i"
              (click)="switchConfigTab(i)"
            >
              <span class="tab-number">{{ i + 1 }}</span>
              <span class="tab-name">{{ service.serviceName }}</span>
              <svg *ngIf="getServiceFormGroup(i).valid" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </button>
          </div>

          <!-- Configuration Form for Active Tab -->
          <div *ngFor="let service of selectedServices; let i = index" formArrayName="services">
            <div *ngIf="activeConfigTab === i" [formGroupName]="i" class="config-form">
              
              <!-- Service Info Header -->
              <div class="service-info-header">
                <h3>{{ service.serviceName }}</h3>
                <p class="service-path">{{ service.categoryName }} › {{ service.subcategoryName }}</p>
              </div>

              <!-- Duration Section -->
              <div class="form-section">
                <div class="section-label">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  <span>DURATION</span>
                </div>

                <div class="form-row">
                  <div class="form-group">
                    <label>Service Duration <span class="required">*</span></label>
                    <div class="input-with-unit">
                      <input 
                        type="number" 
                        formControlName="durationMinutes"
                        placeholder="60"
                        min="15"
                        max="480"
                        step="15"
                      />
                      <span class="input-unit">minutes</span>
                    </div>
                    <p class="helper-text">Minimum 15 minutes, maximum 8 hours</p>
                    <div class="error-message" *ngIf="getServiceFormGroup(i).get('durationMinutes')?.invalid && 
                                                      getServiceFormGroup(i).get('durationMinutes')?.touched">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                      </svg>
                      <span>Duration must be between 15 and 480 minutes</span>
                    </div>
                  </div>

                  <button type="button" class="btn-apply-all" (click)="applyDurationToAll()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
                    </svg>
                    Apply to All
                  </button>
                </div>
              </div>

              <!-- Price Range Section -->
              <div class="form-section">
                <div class="section-label">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 1v22M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6"/>
                  </svg>
                  <span>PRICING</span>
                </div>

                <div class="form-row">
                  <div class="form-group">
                    <label>Minimum Price <span class="required">*</span></label>
                    <div class="input-with-currency">
                      <input 
                        type="number" 
                        formControlName="minPrice"
                        placeholder="0"
                        min="0"
                      />
                      <span class="input-currency">EGP</span>
                    </div>
                  </div>

                  <div class="form-group">
                    <label>Maximum Price <span class="required">*</span></label>
                    <div class="input-with-currency">
                      <input 
                        type="number" 
                        formControlName="maxPrice"
                        placeholder="0"
                        min="0"
                      />
                      <span class="input-currency">EGP</span>
                    </div>
                  </div>

                  <button type="button" class="btn-apply-all" (click)="applyPriceToAll()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
                    </svg>
                    Apply to All
                  </button>
                </div>

                <div class="error-message" *ngIf="getServiceFormGroup(i).errors?.['priceRangeInvalid'] && 
                                                  (getServiceFormGroup(i).get('minPrice')?.touched || 
                                                   getServiceFormGroup(i).get('maxPrice')?.touched)">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                  </svg>
                  <span>Minimum price cannot exceed maximum price</span>
                </div>
              </div>

              <!-- Car Origin Specialization Section -->
              <div class="form-section">
                <div class="section-label">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8z"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                  <span>CAR ORIGIN SPECIALIZATION</span>
                </div>

                <p class="section-description">Select which car origins this service applies to</p>

                <div class="car-origins-grid">
                  <div 
                    *ngFor="let origin of carOrigins"
                    class="car-origin-chip"
                    [class.selected]="isCarOriginSelected(i, origin.code)"
                    (click)="toggleCarOrigin(i, origin.code)"
                  >
                    <span class="origin-flag">{{ origin.flag }}</span>
                    <span class="origin-name">{{ origin.name }}</span>
                    <svg *ngIf="isCarOriginSelected(i, origin.code)" class="origin-check" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                  </div>
                </div>

                <button type="button" class="btn-apply-all" (click)="applyOriginToAll()">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
                  </svg>
                  Apply to All
                </button>

                <div class="error-message" *ngIf="getServiceFormGroup(i).get('carOriginSpecializations')?.invalid && 
                                                  getServiceFormGroup(i).get('carOriginSpecializations')?.touched">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                  </svg>
                  <span>Please select at least one car origin</span>
                </div>
              </div>

              <!-- Optional Description -->
              <div class="form-section">
                <div class="form-group">
                  <label>Service Description (Optional)</label>
                  <textarea 
                    formControlName="description"
                    rows="3"
                    placeholder="Add additional details about this service..."
                  ></textarea>
                </div>
              </div>

            </div>
          </div>
        </form>

        <!-- Navigation Buttons -->
        <div class="step-navigation">
          <button type="button" class="btn-back" (click)="previousStep()">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
            <span>Back</span>
          </button>
          <button 
            type="button" 
            class="btn-next" 
            (click)="nextStep()"
            [disabled]="!canProceedToNextStep()"
          >
            <span>Review & Submit</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- ============================================ -->
      <!-- STEP 5: Review & Submit -->
      <!-- ============================================ -->
      <div *ngIf="currentStep === 5" class="step-content" [@fadeIn]>
        <div class="breadcrumb">
          <span class="breadcrumb-item active">Review & Submit</span>
        </div>

        <!-- Summary Stats -->
        <div class="summary-stats">
          <div class="stat-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <div>
              <p class="stat-label">Total Services</p>
              <p class="stat-value">{{ selectedServices.length }}</p>
            </div>
          </div>
        </div>

        <!-- Services Table -->
        <div class="review-table">
          <div class="table-header">
            <span class="col-service">Service</span>
            <span class="col-duration">Duration</span>
            <span class="col-price">Price Range</span>
            <span class="col-origins">Specializations</span>
            <span class="col-actions">Actions</span>
          </div>

          <div *ngFor="let service of getConfiguredServices(); let i = index" class="table-row">
            <div class="col-service">
              <p class="service-name">{{ service.serviceName }}</p>
              <p class="service-path">{{ service.categoryName }} › {{ service.subcategoryName }}</p>
            </div>
            <div class="col-duration">
              <div class="duration-badge">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                {{ formatDuration(service.durationMinutes) }}
              </div>
            </div>
            <div class="col-price">
              <p class="price-range">{{ formatPrice(service.minPrice) }} - {{ formatPrice(service.maxPrice) }}</p>
            </div>
            <div class="col-origins">
              <div class="origins-preview">
                <span *ngFor="let originCode of service.carOriginSpecializations.slice(0, 3)" class="origin-flag-small">
                  {{ getOriginFlagByCode(originCode) }}
                </span>
                <span *ngIf="service.carOriginSpecializations.length > 3" class="origins-more">
                  +{{ service.carOriginSpecializations.length - 3 }}
                </span>
              </div>
            </div>
            <div class="col-actions">
              <button type="button" class="btn-edit" (click)="editService(i)">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7"/>
                  <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="step-navigation">
          <button type="button" class="btn-back" (click)="previousStep()">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
            <span>Back to Configure</span>
          </button>
          <button 
            type="button" 
            class="btn-submit" 
            (click)="onSubmit()"
            [disabled]="isSubmitting"
            [class.loading]="isSubmitting"
          >
            <span class="btn-content">
              <svg *ngIf="!isSubmitting" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>{{ isSubmitting ? 'Saving...' : 'Add Services' }}</span>
            </span>
            <div class="btn-shine"></div>
          </button>
        </div>
      </div>

    </div>
  </div>
</div>
