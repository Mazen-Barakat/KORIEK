.login-container {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  padding: 20px;
  position: relative;
}

.login-container::before {
  content: '';
  position: absolute;
  top: -10%;
  right: -10%;
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, rgba(232, 69, 69, 0.06) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.login-card {
  background: white;
  border-radius: 16px;
  padding: 50px 45px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  width: 100%;
  max-width: 480px;
  position: relative;
  z-index: 1;
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

h2 {
  margin: 0 0 12px 0;
  font-size: 2.2rem;
  color: #1a1a1a;
  text-align: center;
  font-weight: 700;
  letter-spacing: -0.5px;
}

.subtitle {
  margin: 0 0 35px 0;
  font-size: 1.05rem;
  color: #666;
  text-align: center;
  font-weight: 400;
}

.role-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30px;
  position: relative;
}

.role-badge-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  position: relative;
}

.spinner-container {
  position: relative;
  width: 100px;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Outer spinning gradient ring */
.spinner-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4px solid transparent;
  border-top: 4px solid #E84545;
  border-right: 4px solid #FF6B6B;
  border-bottom: 4px solid #FFD93D;
  box-shadow: 0 0 20px rgba(232, 69, 69, 0.3);
  animation: none;
}

.spinner-container.spinning .spinner-ring {
  animation: spinRing 1s linear infinite;
}

@keyframes spinRing {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Inner circle with gradient background */
.role-icon-wrapper {
  position: relative;
  z-index: 1;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background: linear-gradient(135deg, #E84545 0%, #FF6B6B 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 25px rgba(232, 69, 69, 0.4);
}

.spinner-container.spinning .role-icon-wrapper {
  animation: innerPulse 1.5s ease-in-out infinite;
}

@keyframes innerPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8px 25px rgba(232, 69, 69, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12px 35px rgba(232, 69, 69, 0.6);
  }
}

.role-icon {
  width: 35px;
  height: 35px;
  color: white;
  filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
}

.car-icon {
  width: 40px;
  height: 40px;
  color: white;
  filter: drop-shadow(0 3px 10px rgba(0, 0, 0, 0.4));
}

.spinner-container.spinning .role-icon {
  animation: iconRotate 2s ease-in-out infinite;
}

@keyframes iconRotate {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.role-text {
  display: flex;
  flex-direction: column;
  gap: 6px;
  text-align: left;
}

.role-text span:first-child {
  font-size: 0.85rem;
  color: #999;
  font-weight: 500;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.role-text strong {
  font-size: 1.4rem;
  color: #1a1a1a;
  font-weight: 700;
  background: linear-gradient(135deg, #E84545 0%, #FF6B6B 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.loading-text {
  font-size: 1.4rem;
  font-weight: 700;
  letter-spacing: 0.3px;
  background: linear-gradient(135deg, #E84545 0%, #FF6B6B 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: textShimmer 2s ease-in-out infinite;
}

@keyframes textShimmer {
  0%, 100% {
    opacity: 1;
    filter: brightness(1);
  }
  50% {
    opacity: 0.85;
    filter: brightness(1.2);
  }
}

/* Additional spinning particles effect when loading */
.spinner-container.spinning::before,
.spinner-container.spinning::after {
  content: '';
  position: absolute;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFD93D, #FF6B6B);
  box-shadow: 0 0 10px rgba(255, 217, 61, 0.8);
}

.spinner-container.spinning::before {
  top: 5px;
  left: 50%;
  transform: translateX(-50%);
  animation: particle1 1.5s ease-in-out infinite;
}

.spinner-container.spinning::after {
  bottom: 5px;
  left: 50%;
  transform: translateX(-50%);
  animation: particle2 1.5s ease-in-out infinite;
}

@keyframes particle1 {
  0%, 100% {
    transform: translateX(-50%) translateY(0) scale(1);
    opacity: 1;
  }
  50% {
    transform: translateX(-50%) translateY(-5px) scale(1.2);
    opacity: 0.7;
  }
}

@keyframes particle2 {
  0%, 100% {
    transform: translateX(-50%) translateY(0) scale(1);
    opacity: 1;
  }
  50% {
    transform: translateX(-50%) translateY(5px) scale(1.2);
    opacity: 0.7;
  }
}

.alert {
  padding: 12px 16px;
  border-radius: 8px;
  margin-bottom: 20px;
  font-size: 14px;
}

.alert-success {
  background-color: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.alert-error {
  background-color: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.form-group {
  margin-bottom: 24px;
}

label {
  display: block;
  margin-bottom: 10px;
  font-size: 0.95rem;
  font-weight: 600;
  color: #1a1a1a;
}

input {
  width: 100%;
  padding: 14px 18px;
  font-size: 1rem;
  border: 2px solid #e8e8e8;
  border-radius: 10px;
  transition: all 0.3s ease;
  box-sizing: border-box;
  background: #fafafa;
}

input:focus {
  outline: none;
  border-color: #E84545;
  box-shadow: 0 0 0 4px rgba(232, 69, 69, 0.1);
  background: white;
}

input.error {
  border-color: #E84545;
  background-color: #fff5f5;
}

input.error:focus {
  box-shadow: 0 0 0 4px rgba(232, 69, 69, 0.15);
}

.error-message {
  display: block;
  margin-top: 8px;
  font-size: 0.85rem;
  color: #E84545;
  font-weight: 500;
}

/* Password Input Wrapper */
.password-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input-wrapper input {
  padding-right: 45px;
}

.password-toggle {
  position: absolute;
  right: 12px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  transition: color 0.3s ease;
  border-radius: 4px;
}

.password-toggle:hover {
  color: #E84545;
  background-color: rgba(232, 69, 69, 0.05);
}

.password-toggle svg {
  display: block;
}

.submit-btn {
  width: 100%;
  padding: 16px;
  font-size: 1.05rem;
  font-weight: 700;
  color: white;
  background: linear-gradient(135deg, #E84545 0%, #FF6B6B 100%);
  border: none;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-top: 10px;
  box-shadow: 0 4px 15px rgba(232, 69, 69, 0.3);
  letter-spacing: 0.3px;
}

.submit-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(232, 69, 69, 0.4);
  background: linear-gradient(135deg, #d63535 0%, #FF5555 100%);
}

.submit-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

.signup-link {
  margin-top: 24px;
  text-align: center;
  font-size: 0.95rem;
  color: #666;
}

.signup-link a {
  color: #E84545;
  text-decoration: none;
  font-weight: 700;
  transition: color 0.3s ease;
}

.signup-link a:hover {
  color: #d63535;
  text-decoration: underline;
}

.divider {
  display: flex;
  align-items: center;
  margin: 28px 0;
  color: #999;
  font-size: 0.95rem;
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 2px;
  background-color: #e8e8e8;
}

.divider span {
  padding: 0 20px;
  font-weight: 500;
}

.google-btn {
  width: 100%;
  padding: 16px;
  font-size: 1.05rem;
  font-weight: 600;
  color: #1a1a1a;
  background: white;
  border: 2px solid #e8e8e8;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
}

.google-btn:hover:not(:disabled) {
  background: #f8f8f8;
  border-color: #E84545;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
}

.google-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.google-icon {
  width: 22px;
  height: 22px;
}

.forget-password-btn {
  background: none;
  border: none;
  color: #E84545;
  font-size: 0.9rem;
  cursor: pointer;
  padding: 0;
  text-decoration: none;
  transition: color 0.3s ease;
  font-weight: 600;
}

.forget-password-btn:hover {
  color: #d63535;
  text-decoration: underline;
}

/* Back Button */
.back-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: none;
  border: none;
  color: #666;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  padding: 8px 12px;
  margin-bottom: 20px;
  transition: all 0.3s ease;
  border-radius: 8px;
}

.back-btn:hover {
  color: #E84545;
  background-color: rgba(232, 69, 69, 0.05);
  transform: translateX(-5px);
}

.back-btn svg {
  transition: transform 0.3s ease;
}

.back-btn:hover svg {
  transform: translateX(-3px);
}

/* Removed heavy floating animation for performance */

/* Form group staggered animation on load */
.form-group {
  animation: slideInUp 0.5s ease-out backwards;
}

.form-group:nth-child(1) { animation-delay: 0.1s; }
.form-group:nth-child(2) { animation-delay: 0.15s; }
.form-group:nth-child(3) { animation-delay: 0.2s; }
.form-group:nth-child(4) { animation-delay: 0.25s; }

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Form input focus animation enhancement */
input:focus {
  animation: inputPulse 0.3s ease-out;
}

@keyframes inputPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.01);
  }
  100% {
    transform: scale(1);
  }
}

/* Button click animation */
.submit-btn:active:not(:disabled),
.google-btn:active:not(:disabled) {
  transform: scale(0.98);
}

/* Success Popup */
.success-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

.success-popup {
  background: white;
  padding: 40px 50px;
  border-radius: 20px;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  max-width: 400px;
}

@keyframes popIn {
  0% {
    transform: scale(0.3) rotate(-5deg);
    opacity: 0;
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.success-checkmark {
  margin: 0 auto 20px;
  animation: checkmarkZoom 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  animation-delay: 0.2s;
  animation-fill-mode: backwards;
}

@keyframes checkmarkZoom {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.check-circle {
  stroke-dasharray: 226;
  stroke-dashoffset: 226;
  animation: drawCircle 0.6s ease-out forwards;
  animation-delay: 0.4s;
}

@keyframes drawCircle {
  to {
    stroke-dashoffset: 0;
  }
}

.check-path {
  stroke-dasharray: 50;
  stroke-dashoffset: 50;
  animation: drawCheck 0.4s ease-out forwards;
  animation-delay: 0.8s;
}

@keyframes drawCheck {
  to {
    stroke-dashoffset: 0;
  }
}

.success-popup h3 {
  color: #1a1a1a;
  font-size: 24px;
  font-weight: 700;
  margin: 0 0 12px 0;
  animation: slideUp 0.5s ease-out;
  animation-delay: 0.6s;
  animation-fill-mode: backwards;
}

.success-popup p {
  color: #6BCF7F;
  font-size: 16px;
  font-weight: 600;
  margin: 0;
  animation: fadeIn 0.5s ease-out;
  animation-delay: 0.8s;
  animation-fill-mode: backwards;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes slideUp {
  0% {
    transform: translateY(20px);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .login-container {
    padding: 20px;
  }

  .login-card {
    padding: 30px 24px;
  }

  h2 {
    font-size: 26px;
  }

  .subtitle {
    font-size: 14px;
  }

  .success-popup {
    padding: 30px 35px;
    margin: 0 20px;
  }

  .spinner-container {
    width: 40px;
    height: 40px;
  }

  .spinner-ring {
    width: 40px;
    height: 40px;
  }

  .role-icon {
    width: 24px;
    height: 24px;
  }
}
